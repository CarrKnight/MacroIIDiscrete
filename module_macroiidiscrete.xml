  <path id="macroiidiscrete.module.classpath">
    <path refid="${module.jdk.classpath.macroiidiscrete}"/>
    <pathelement location="${macroiidiscrete.output.dir}"/>
    <pathelement location="${basedir}/lib/mason/jar/mason.16.jar"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.net.sf.opencsv:opencsv:2.3.classpath"/>
    <path refid="library.org.powermock:powermock-api-mockito:1.5.classpath"/>
    <path refid="library.fr.inria.powerapi.listener:listener-cpu-jfreechart:1.5-snapshot.classpath"/>
    <path refid="library.powermock-module-junit4.classpath"/>
  </path>
  
  <path id="macroiidiscrete.runtime.module.classpath">
    <pathelement location="${macroiidiscrete.testoutput.dir}"/>
    <pathelement location="${macroiidiscrete.output.dir}"/>
    <pathelement location="${basedir}/lib/mason/jar/mason.16.jar"/>
