  <target name="compile.module.macroiidiscrete" depends="compile.module.macroiidiscrete.production,compile.module.macroiidiscrete.tests" description="Compile module MacroIIDiscrete"/>
  
  <target name="compile.module.macroiidiscrete.production" depends="register.custom.compilers" description="Compile module MacroIIDiscrete; production classes">
    <mkdir dir="${macroiidiscrete.output.dir}"/>
